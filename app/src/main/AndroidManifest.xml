<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.englishwordmemorization">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TestResultActivity"></activity>
        <activity
            android:name=".BookmarkActivity"
            android:theme="@style/BookmarkTheme" />
        <activity android:name=".SolveSpellingActivity"
            android:theme="@style/SolveSpellingTheme"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".SolveWordActivity"
            android:theme="@style/SolveWordTheme"/>
        <activity
            android:name=".SolveMeaningActivity"
            android:theme="@style/SolveMeaningTheme" />
        <activity
            android:name=".QuizChooseActivity"
            android:theme="@style/QuizChooseTheme" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SubActivity"
            android:theme="@style/SubTheme" />
        <activity
            android:name=".ContentActivity"
            android:theme="@style/ContentTheme" />
    </application>

</manifest>